<?xml version="1.0" encoding="utf-8"?>

<PodContentBase
	xmlns="com.esria.samples.dashboard.view.*"
	xmlns:mx="http://www.adobe.com/2006/mxml"
	width="100%" height="100%"		
	verticalScrollPolicy="off"
	backgroundColor="#000000"
	paddingBottom="0" paddingLeft="0" paddingRight="0" paddingTop="0" 
	verticalAlign="middle" horizontalAlign="center"                
	styleName="mainApplication" 
	xmlns:view="org.integratedsemantics.flexspacesair.view.localfiles.*"
	creationComplete="onCreationComplete(event)">
    
    <mx:Metadata>[ResourceBundle("FlexSpaces")]</mx:Metadata>  
             
    <mx:Script>
        <![CDATA[
        import mx.events.FlexEvent;
        import org.integratedsemantics.flexspacesair.presmodel.localfiles.LocalFilesBrowserPresModel;

        [Bindable]
        private var presModel:LocalFilesBrowserPresModel = new LocalFilesBrowserPresModel();
        
        override protected function onCreationComplete(e:FlexEvent):void
        {
            super.onCreationComplete(e);
        }
        
        ]]>
    </mx:Script>                              
           
    <view:LocalFilesBrowserView id="localFilesView" presModel="{presModel}" width="100%" height="100%"/>

</PodContentBase>

